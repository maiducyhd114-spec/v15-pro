generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subject {
  id         Int         @id @default(autoincrement())
  slug       String      @unique
  title      String
  dept       String?
  summary    String?
  status     String      @default("PUBLISHED")
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  resources  Resource[]
  tags       SubjectTag[]
}

model Resource {
  id         Int      @id @default(autoincrement())
  label      String
  type       String
  url        String
  subjectId  Int
  subject    Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
}

model Tag {
  id       Int          @id @default(autoincrement())
  name     String       @unique
  subjects SubjectTag[]
}

model SubjectTag {
  subjectId Int
  tagId     Int
  subject   Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([subjectId, tagId])
}

model TagClickStat {
  id         Int      @id @default(autoincrement())
  tagName    String   @unique
  count      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
